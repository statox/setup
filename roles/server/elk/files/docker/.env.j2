# The domain info come directly from the invocation of the ansible playbook
ELASTIC_CLUSTER_DOMAIN={{ elastic_cluster_domain }}
KIBANA_DOMAIN={{ kibana_domain }}
LOGSTASH_DOMAIN={{ logstash_domain }}


# /!\ TO THE ME OF THE FUTURE LOOKING FOR CREDENTIALS
# For the secret data in this file check
# the secure note `ELK - secrets` in Dashlane
# and the creds are also in the secrets file in this repo

# Password for the 'elastic' user (at least 6 characters)
ELASTIC_PASSWORD={{ elk_elastic_password }}

# Password for the 'kibana_system' user (at least 6 characters)
KIBANA_PASSWORD={{ elk_kibana_password }}

# Version of Elastic products
STACK_VERSION=8.15.2

# Set the cluster name
CLUSTER_NAME=logs-statox

# Set to 'basic' or 'trial' to automatically start the 30-day trial
LICENSE=basic

# Port to expose Kibana to the host
KIBANA_HOST=https://{{ kibana_domain }}

# Encryption key used for settings
#   xpack.encryptedSavedObjects.encryptionKey
#   xpack.reporting.encryptionKey
#   xpack.security.encryptionKey
KIBANA_ENCRYPTION_KEY={{ elk_kibana_encryption_key }}

# Port used by logstash to ingest logs
LOGSTASH_HTTP_INPUT_PORT=8888

# User and password used for basic auth to call logstash http plugin
LOGGER_USER={{ elk_logger_user }}
LOGGER_PASSWORD={{ elk_logger_password }}

# Increase or decrease based on the available host memory (in bytes)
MEM_LIMIT_ELK=3000000000
MEM_LIMIT_KIBANA=2000000000
MEM_LIMIT_LOGSTASH=2000000000
MEM_LIMIT_BEATS=500000000

# Project namespace (defaults to the current folder name if not set)
COMPOSE_PROJECT_NAME=elk

# AWS Credentials to access S3 bucket for snapshots
AWS_ACCESS_KEY={{ elk_aws_access_key }}
AWS_SECRET_KEY={{ elk_aws_secret_key }}
